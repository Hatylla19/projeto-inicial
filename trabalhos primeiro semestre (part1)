questão 35 :


Algoritmo "catetos de um triangulo"

Var
   a,b,hip :real



Inicio
      escreva("informe o valor do cateto a ")
      leia(a)
      escreva("informe o valor do cateto b ")
      leia(b)
      hip <- raizq ((a^2) + (b^2))
      escreva("a hipotenusa desses catetos e: ",hip:4:1)



Fimalgoritmo




questão 36:


Algoritmo "valor de um cilindro"

Var
   p,r,a,vol:real



Inicio
      escreva("informe a altura do cilindro : ")
      leia(a)
      escreva("informe o raio do cilindro ")
      leia(r)
      p <- 3,141592
      vol <- (p*r^2*a)
      escreva("o volume do cilindro circular e : ",vol:4:1)



Fimalgoritmo






questão 37: 



Algoritmo "desconto de um produto"

Var
   prod,desc,vf:real

Inicio
      escreval("informe o preço de um produto ; ")
      leia(prod)
      desc <- prod*(12/100)
      vf <- (prod - desc)
      escreval("o produto informado com desconto custa: ",vf)


Fimalgoritmo




questão 38:



Algoritmo "aumento de 25%"

Var
   sb,reaj,sal_fin :real

Inicio
      escreval("informe o valor de seu salario bruto ; ")
      leia(sb)
      reaj <- sb*(25/100)
      sal_fin <- (sb + reaj)
      escreval("o valor do seu salario com o reajuste e : ",sal_fin)


