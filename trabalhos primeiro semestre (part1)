questão 14:


Algoritmo "graus para radianos"

Var
   p,graus,rad:real


Inicio
      escreva("informe um numero em graus ")
      leia(graus)
      p <- 3,14
      rad <- (graus * p/180)
      escreva ("o numero informado em graus convertido para radianos e = ",rad:3:1)

      

Fimalgoritmo




questão 15: 


Algoritmo "radiano para graus"

Var
   p,graus,rad:real


Inicio
      escreva("informe um numero  em radianos ")
      leia(rad)
      p <- 3,14
      graus <- (rad * 180/p) - 27
      escreva ("o numero informado em radianos convertido para graus e aproximadamente  ",graus)

      

Fimalgoritmo




