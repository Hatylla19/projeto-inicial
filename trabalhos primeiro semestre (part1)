questão 6:

Algoritmo "celsius para Fahrenheit"

Var
gc,gf,con:real


Inicio
      escreva ("informe uma temperatura em celsius ")
      leia(gc)
      con <- (gc*(9.0/5.0)+32)
      escreva("o grau dado em celsius convertido para Fahrenheit fica ",con)


Fimalgoritmo



questão 7



Algoritmo "fahrenheit para celsius"

Var
gc,gf,con:real


Inicio
      escreva ("informe uma temperatura em Fahrenheit ")
      leia(gf)
      con <- (5 * (gf - 32)/9)
      escreva("o grau dado em Fahrenheit convertido para celsius fica ",con:4:1)


Fimalgoritmo




