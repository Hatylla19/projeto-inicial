questao 3


Algoritmo "soma de 3 numeros"

var
   soma_num,n1,n2,n3:inteiro
   

inicio
      escreva("digite o primeiro numero ")
      leia(n1)
      escreva("digite o segundo numero ")
      leia(n2)
      escreva("informe o terceiro numero ")
      leia(n3)
      soma_num <- (n1+n2+n3)
      escreval("a soma dos numeros e ",soma_num)
      


fimalgoritmo



