questão 31:


Algoritmo "intessesor e sucessor "


Var
   num,ant,suc:inteiro



Inicio
      escreva("informe um numero ")
      leia(num)
      ant <- (num - 1)
      suc <- (num + 1)
      escreva(" o antecessor e",ant)
      escreva(" e o sucessor e ",suc)

Fimalgoritmo





questão 32:



Algoritmo "intessesor e sucessor "


Var
   num,ant,suc,somaa,somas:inteiro



Inicio
      escreva("informe um numero ")
      leia(num)
      ant <- (num - 1)
      suc <- (num + 1)
      escreval("o numero informado e ",num)
      escreval(" o antecessor e ",ant)
      escreval(" e o sucessor e ",suc)
      somaa <- (ant*ant*ant)
      somas <- (suc*suc)
      escreval("o triplo do antecessor ",somaa)
      escreval("o duplo do sucessor ",somas)

Fimalgoritmo




